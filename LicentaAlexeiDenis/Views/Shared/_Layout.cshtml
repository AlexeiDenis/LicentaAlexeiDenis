<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="height: 100vh;
        background: rgb(238 238 238);">
    <div class="navbar navbar-inverse navbar-fixed-top" style="
      border-bottom: 4px solid #7371CB;
        height: 100px;
        background-color: black;" >
        <div class="container">
            <div class="navbar-header ">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <a class="navbar-brand " href="/Licitaties/Index" >
                    <img src="~/logo/Group 7.png"  alt="logo" >
                </a>

            </div>
            <div class="navbar-collapse collapse " style="margin-top:25px; background-color:black;">
                <ul class="nav navbar-nav navbar-left ">
                    @if (User.Identity.IsAuthenticated)
                    {
                        if (User.IsInRole("Admin"))
                        {
                            <li>@Html.ActionLink("Categorii Produse", "Index", "CategoriiProduse")</li>
                            <li>@Html.ActionLink("Produse", "Index", "Produse")</li>
                            <li>@Html.ActionLink("Toate ofertele", "Index", "Ofertes")</li>

                        }
                    }
                </ul>
                <ul class="nav navbar-nav navbar-right">

                    @if (User.Identity.IsAuthenticated)
                    {
                        if (User.IsInRole("Admin"))
                        {
                            
                            <li style="color:red;margin-top:15px;">Salut - @User.Identity.Name</li>
                            <li>@Html.ActionLink("Delogare", "Delogare", "Conturi")</li>
                        }
                        else
                        {
                            <li style="color:whitesmoke;margin-top:15px;">Salut - @User.Identity.Name</li>
                            <li>@Html.ActionLink("Delogare", "Delogare", "Conturi")</li>
                        }



                    }
                    else
                    {
                        <li>@Html.ActionLink("Autentificare / Inregistrare", "Autentificare", "Conturi")</li>
                    }


                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content" style="box-shadow: 10px 10px 10px rgba(46,54,68,0.03);
        border-radius: 3em;
        border: 1px solid #14141a;
        background: rgba(255,255,255, 0.2);
        margin-top: 65px;
       overflow:hidden;">
        @RenderBody()
        <hr />

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
